@{
    ViewData["Title"] = "Encode/Decode";
}
<h1>@ViewData["Title"]</h1>

<div class="form-group">
    <label for="txtURLEnDecode" class="control-label">Put URL here</label>
    <textarea id="txtURLEnDecode" class="form-control" rows="10"></textarea>
</div>
<div class="form-group">
    <input id="btnURLDecode" type="submit" value="Decode" class="btn btn-primary" />
    <input id="btnURLEncode" type="submit" value="Encode" class="btn btn-primary" />
</div>

<div class="form-group">
    <label for="txtBase64EnDecode" class="control-label">Put string here</label>
    <textarea id="txtBase64EnDecode" class="form-control" rows="10"></textarea>
</div>
<div class="form-group">
    <input id="btnBase64Decode" type="submit" value="Decode" class="btn btn-primary" />
    <input id="btnBase64Encode" type="submit" value="Encode" class="btn btn-primary" />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            //URL decode encode
            $('#btnURLEncode').click(()=> {
                var encodedUrl = encodeURIComponent($('#txtURLEnDecode').val().trim());
                //console.log(encodedUrl);
                $('#txtURLEnDecode').val(encodedUrl);

                return false;
            });
            $('#btnURLDecode').click(()=> {
                var decodedUrl = decodeURIComponent($('#txtURLEnDecode').val().trim());
                //console.log(decodedUrl);
                $('#txtURLEnDecode').val(decodedUrl);
                return false;
            });

            //Base64 encode decode
            $('#btnBase64Encode').click(()=> {
                var encodedUrl = btoa($('#txtBase64EnDecode').val().trim());
                //console.log(encodedUrl);
                $('#txtBase64EnDecode').val(encodedUrl);

                return false;
            });
            $('#btnBase64Decode').click(()=> {
                var decodedUrl = atob($('#txtBase64EnDecode').val().trim());
                //console.log(decodedUrl);
                $('#txtBase64EnDecode').val(decodedUrl);
                return false;
            });
        });
    </script>
}