@{
    ViewData["Title"] = "URL Encod/Decod";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<div class="form-group">
    <label for="txtURL" class="control-label">Put URL here</label>
    <textarea id="txtURL" class="form-control" rows="10"></textarea>
</div>
<div class="form-group">
    <input id="btnDecode" type="submit" value="Decode" class="btn btn-primary" />
    <input id="btnEncode" type="submit" value="Encode" class="btn btn-primary" />
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    $(function () {
        $('#btnEncode').click(()=> {
            var encodedUrl = encodeURIComponent($('#txtURL').val().trim());
            //console.log(encodedUrl);
            $('#txtURL').val(encodedUrl);

            return false;
        });
        $('#btnDecode').click(()=> {
            var decodedUrl = decodeURIComponent($('#txtURL').val().trim());
            //console.log(decodedUrl);
            $('#txtURL').val(decodedUrl);
            return false;
        });
    });
</script>
}